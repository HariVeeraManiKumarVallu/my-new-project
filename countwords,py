# main_functions.py

import random
import string

def count_words(text):
    """Counts the number of words in a string."""
    if not text.strip():
        return 0
    return len(text.split())

def count_occurrences(text, word):
    """Counts the occurrences of a word in a string."""
    return text.split().count(word)

def merge_strings(str1, str2):
    """Merges two strings by alternating characters from each."""
    merged = ''.join(a + b for a, b in zip(str1, str2))
    merged += str1[len(merged) // 2:] + str2[len(merged) // 2:]
    return merged

def generate_random_string(length):
    """Generates a random string of specified length using letters and digits."""
    if length <= 0:
        return ""
    return ''.join(random.choices(string.ascii_letters + string.digits, k=length))
